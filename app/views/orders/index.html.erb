<div class=row>
  <div class = "col-md-12">
    <h2>All Orders</h2>
  </div>
</div>

<div class="row">
  <div class = "col-md-12">
    <p>Create new orders from within <%= link_to "User", users_path %></p>
  </div>
</div>

<div class="row">
  <div class = "col-md-12">

    <table class = "table table-striped table-bordered">

      <%= render "orders_thead" %>

      <% if @user %>

        <% render "order_tbody" %>

      <% else %>

        <% render "user_orders_tbody" %>

      <% end %>

    </table>
  </div>

</div>
